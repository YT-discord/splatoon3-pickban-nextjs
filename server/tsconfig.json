{
	  "compilerOptions": {
		      "target": "ES2021",                 
		          "module": "commonjs",              
			      "lib": ["ES2021"],                  
			          "outDir": "./dist",                
				      "rootDir": "./",                
				          "strict": true,                     
					      "esModuleInterop": true,            
					          "experimentalDecorators": true,     
						      "emitDecoratorMetadata": true,      
						          "skipLibCheck": true,               
							      "forceConsistentCasingInFileNames": true, 
							          "resolveJsonModule": true,          
								      "useDefineForClassFields": false,   
								          "sourceMap": true                   
									    },
									      "include": ["./**/*.ts"],              
									        "exclude": ["node_modules", "dist"]   
}
