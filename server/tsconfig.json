// reactnext/server/tsconfig.json
{
  "extends": "../tsconfig.json", // ★ ルートの設定を継承
  "compilerOptions": {
    "module": "CommonJS", // ベースと同じか、必要なら上書き
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts"], // server ディレクトリ以下のみ対象
  "exclude": ["node_modules", "./dist"]
}