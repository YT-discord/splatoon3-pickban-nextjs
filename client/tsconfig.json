{
  "extends": "../tsconfig.json", // ★ ルートの tsconfig.json を継承
  "compilerOptions": {
    "target": "es5", // Next.js のデフォルトは es5 だが、プロジェクト要件に応じて es2017 なども可
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // ルートから継承されるが、明示しても良い
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Next.js は Babel でトランスパイルするため true
    "esModuleInterop": true, // ルートから継承
    "module": "esnext", // Next.js 推奨
    "moduleResolution": "node", // ルートから継承
    "resolveJsonModule": true, // ルートから継承
    "isolatedModules": true, // ルートから継承
    "jsx": "preserve", // Next.js 必須
    "incremental": true,
    // "baseUrl": ".", // ルートから継承される baseUrl を使う
    "plugins": [ // Next.js 13.4 以降で App Router を使う場合など
      {
        "name": "next"
      }
    ]
    // paths はルートから継承
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}