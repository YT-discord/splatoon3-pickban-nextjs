{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS", // Node.js向け (サーバー用、クライアントは上書き)
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".", // ルートを基準にする
      "paths": {
        "@common/*": ["./common/*"], // ルートからのパス
        "@server/*": ["./server/*"], // (任意) サーバー内のエイリアス
        "@client/*": ["./client/src/*"] // (任意) クライアント内のエイリアス
      },
       // サーバー固有設定は server/tsconfig.json へ
       // クライアント固有設定は client/tsconfig.json へ
    }
    // "include": [] // ここでは include は空か、設定しない
    // "exclude": ["node_modules"]
  }